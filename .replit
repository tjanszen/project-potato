modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-25_05"
packages = ["sqlite"]

[deployment]
deploymentTarget = "gce"
run = "node index.js"
build = ["sh", "-c", "npm install"]

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5173
externalPort = 5173

[[ports]]
localPort = 5174
externalPort = 3000


[agent]
integrations = ["javascript_database==1.0.0"]

[workflows]

[[workflows.workflow]]
name = "Health Check"
mode = "sequential"
author = 44564630

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Server health check completed\" && curl -s http://localhost:3000/health || echo \"Server not running\""

[[workflows.workflow]]
name = "Clean Production Deploy"
mode = "sequential"
author = 44564630

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node index.js\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"vite\" || true  "

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node index.js"

[[workflows.workflow]]
name = "Quick Backend Restart"
mode = "sequential"
author = 44564630

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node index.js\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node index.js"

[[workflows.workflow]]
name = "Full Clean Restart"
mode = "sequential"
author = 44564630

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node index.js\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"vite\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node index.js"
